            id:labels
            source:"labels.png"

    BoxLayout:
        orientation:"vertical"
        size_hint:(None, None)
        size:(250, 800)
        FloatLayout:
            pos_hint:{'bottom':0}

            Image:
                source:'active_cases1.png'
                pos_hint:{'right':1, 'bottom':0}

            Image:
                id:rev1
                source:'bg_color.png'
                pos:(900, 0)

        BoxLayout:
            orientation:"horizontal"
            size_hint:(None, None)
            size: (250, 50)
            padding:1
            spacing:1

            Button:
                id:PP
                text:"Play"
                size_hint:(None, None)
                size:(100, 50)
                on_release:
                    app.pl(PP)
                    threading.Thread(target = app.simu, args = (speed,PP), daemon = True).start()

            Button:
                id:x1
                text:"1x"
                size_hint:(None, None)
                size:(30, 50)
                on_release:
                    app.sped('x1')

            Button:
                id:x2
                text:"2x"
                size_hint:(None, None)
                size:(30, 50)
                on_release:
                    app.sped('x2')

            Button:
                id:x4
                text:"4x"
                size_hint:(None, None)
                size:(30, 50)
                on_release:
                    app.sped('x4')

            Button:
                id:x8
                text:"8x"
                size_hint:(None, None)
                size:(30, 50)
                on_release:
                    app.sped('x8')

            Button:
                id:x16
                text:"16x"
                size_hint:(None, None)
                size:(30, 50)
                on_release:
                    app.sped('x16')

        Slider:
            id:speed
            min:0
            max:497
            step:1
            value:0
            size_hint:(None, None)
            size: (250, 50)
            on_value:
                states = [andhra, arunachal, assam, bihar, chattis, delhi, goa, gujrat, haryana, himachal, jammu, jharkhand, karnataka, kerela, ladakh, mp, maha, manipur, meghalaya, mizoram, nagaland, odisha, punjab, rajasthan, sikkim, tamil, telangana, tripura, up, uk, bengal]
                app.slid(speed, states, rev1)

        Label:
            text:"Days since 14th March 2020:" + str(int(speed.value))
            size_hint:(None, None)
            size:(250, 50)
